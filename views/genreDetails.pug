extends layout

block content 
  h1= title
  block delete 
  p= genre.description
  h2 #{genre.name} Films
  if filmsInGenre
    ul 
      each film in filmsInGenre 
        li 
          a(href=film.url)= `${film.title} (${film.release.getFullYear()})`
  p 
    a(href=`${genre.url}/update`) Update Genre
  p 
    a(href=`${genre.url}/delete`) Delete Genre