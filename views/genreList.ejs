<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav>
      <a href="/"><button>Home</button></a>
      <a href="/films"><button>Browse Films</button></a>
      <a href="/genres"><button>Browse Genres</button></a>
    </nav>
    <main>
      <h1><%= title %></h1>
      <div class="centered">
        <a href="/genres/create"><button>Add Genre</button></a>
      </div>
      <div class="centered">
        <section>
          <ul>
            <% if (allGenres.length > 0) { %>
            <ul>
              <%allGenres.map((genre) => { %>
              <li><a href="/genres/<%= genre.id %>"><%= genre.name %></a></li>
              <% }) %>
            </ul>
            <% } else { %>
            <h2>There are no genres.</h2>
            <% } %>
          </ul>
        </section>
      </div>
    </main>
  </body>
</html>
